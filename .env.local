GOOGLE_CLOUD_STORAGE_BUCKET=flavours-production-media
GOOGLE_CLOUD_SQL_INSTANCE=flavours-production-db
GOOGLE_CLOUD_CDN_BACKEND_SERVICE=flavours-backend-service

# CDN Configuration
