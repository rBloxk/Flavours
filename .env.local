CDN_KEY=your_cloudfront_key_here

# Feature Flags
FEATURE_USER_REGISTRATION=true
FEATURE_CREATOR_REGISTRATION=true
FEATURE_PAYMENT_PROCESSING=true
FEATURE_CONTENT_UPLOAD=true
FEATURE_MESSAGING=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
FEATURE_MODERATION=true

# Content Moderation
CONTENT_MODERATION_ENABLED=true
CONTENT_MODERATION_API_KEY=your_moderation_api_key_here
CONTENT_MODERATION_THRESHOLD=0.8

# Age Verification
AGE_VERIFICATION_ENABLED=true
AGE_VERIFICATION_API_KEY=your_age_verification_api_key_here
AGE_VERIFICATION_THRESHOLD=0.9

# DMCA Configuration
DMCA_ENABLED=true
DMCA_EMAIL=dmca@flavours.app
DMCA_WEBHOOK_URL=https://api.flavours.app/api/v1/dmca/webhook

# Legal Compliance
LEGAL_COMPLIANCE_ENABLED=true
LEGAL_COMPLIANCE_REGION=US
LEGAL_COMPLIANCE_LAWS=COPPA,CAN-SPAM,GDPR,CCPA

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER=1800
CACHE_TTL_POST=1800
CACHE_TTL_FEED=300

# Database Pool Configuration
DB_MAX_CONNECTIONS=50
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=30000
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=60000
WS_MAX_CONNECTIONS=10000

# Media Processing Configuration
MEDIA_PROCESSING_ENABLED=true
MEDIA_PROCESSING_WORKERS=8
MEDIA_PROCESSING_TIMEOUT=600000

# Production Security
ENABLE_HTTPS_REDIRECT=true
ENABLE_HSTS=true
ENABLE_CSP=true
ENABLE_XSS_PROTECTION=true
ENABLE_CSRF_PROTECTION=true

# Performance Optimization
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
ENABLE_CDN=true
ENABLE_LAZY_LOADING=true

# Monitoring and Alerting
ENABLE_ALERTS=true
ALERT_EMAIL=alerts@flavours.app
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook
ALERT_DISCORD_WEBHOOK=https://discord.com/api/webhooks/your/discord/webhook

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=flavours-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here
BACKUP_COMPRESSION=true

# Disaster Recovery
DR_ENABLED=true
DR_REGION=us-west-2
DR_RTO_MINUTES=60
DR_RPO_MINUTES=15

# Compliance and Auditing
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_ENCRYPTION=true
AUDIT_LOG_BACKUP=true

# Data Privacy
DATA_PRIVACY_ENABLED=true
DATA_RETENTION_DAYS=2555
DATA_ANONYMIZATION=true
DATA_ENCRYPTION=true

# Business Intelligence
BI_ENABLED=true
BI_DATABASE_URL=postgresql://bi:bi@your-bi-db.amazonaws.com:5432/flavours_bi
BI_REPORTING_ENABLED=true
BI_ANALYTICS_ENABLED=true

# Development Configuration
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false

# Testing Configuration
TEST_ENVIRONMENT=false
